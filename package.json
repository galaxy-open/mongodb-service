{
  "name": "mongodb-service",
  "version": "1.0.0",
  "type": "module",
  "license": "SSPL-1.0",
  "description": "Open source MongoDB hosting platform under SSPL",
  "author": "Galaxy",
  "repository": {
    "type": "git",
    "url": "https://github.com/galaxy-sspl/mongodb-service.git"
  },
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test:functional": "node ace test functional",
    "test:browser": "node ace test browser",
    "test:unit": "node ace test unit",
    "test:coverage": "c8 -c .c8rc.json npm run test:unit",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "npm-latest": "ncu --interactive --format group --reject mongodb",
    "dotenv": "infisical export --env=dev > .env",
    "migration:run": "node ace migration:run",
    "migration:rollback": "node ace migration:rollback",
    "migration:status": "node ace migration:status",
    "db:seed": "node ace db:seed",
    "db:fresh": "node ace migration:fresh --seed",
    "queue:listen": "node ace queue:listen",
    "scheduler:dev": "node ace scheduler:work --watch",
    "scheduler:run": "node ace scheduler:work"
  },
  "imports": {
    "#stubs/*": "./stubs/*.js",
    "#guards/*": "./guards/*.js",
    "#factories/*": "./database/factories/*.js",
    "#interfaces/*": "./app/interfaces/*.js",
    "#jobs/*": "./app/jobs/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#actions/*": "./app/actions/*.js",
    "#enums/*": "./app/enums/*.js",
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/browser-client": "^2.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "1.13.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/sinon": "^17.0.4",
    "@vitejs/plugin-react": "^4.6.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "hot-hook": "^0.4.0",
    "npm-check-updates": "^18.0.2",
    "pino-pretty": "^13.1.1",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9.2",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/cache": "^1.3.0",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/inertia": "^3.1.1",
    "@adonisjs/limiter": "^2.4.0",
    "@adonisjs/lock": "^1.1.1",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/mail": "^9.2.2",
    "@adonisjs/redis": "^9.2.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@aws-sdk/client-route-53": "^3.873.0",
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/s3-request-presigner": "^3.873.0",
    "@inertiajs/react": "^2.1.2",
    "@mantine/core": "^8.2.7",
    "@mantine/hooks": "^8.2.7",
    "@rlanz/bull-queue": "^3.1.0",
    "@tabler/icons-react": "^3.34.1",
    "@types/pg": "^8.15.5",
    "@vinejs/vine": "^3.0.1",
    "adonis-autoswagger": "^3.73.0",
    "adonis-lucid-soft-deletes": "^2.1.0",
    "adonisjs-scheduler": "^2.4.1",
    "edge.js": "^6.3.0",
    "jose": "^6.0.13",
    "luxon": "^3.7.1",
    "mongodb": "6.16.0",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reflect-metadata": "^0.2.2",
    "sinon": "^21.0.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "@inertiajs/core": "2.1.2",
    "strtok3": "8.0.1"
  },
  "resolutions": {
    "@inertiajs/core": "2.1.2",
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "@inertiajs/core": "2.1.2",
      "strtok3": "8.0.1"
    }
  },
  "prettier": "@adonisjs/prettier-config"
}
